<html>
  <head>
    <%= render '/layouts/nav_bar' %>
    <style>
  	.bookTitle{
  color: #333333;
    font-family: "Merriweather", "Georgia", serif;
    font-size: 120%;
    font-weight: bold;
    line-height: 1.3;
}

a{
  color: #00635d;
    text-decoration: none;
}

button{
  color: #fff;
    background-color: #409D69;
    color: #fff;
    width: 200px;
    height: 4em;
    padding: 8px;
}

table{
  display: table;
    border-collapse: separate;
    border-spacing: 2px;
    border-color: grey;
    margin-left: 35%;
    margin-top: 5%;
}
</style>
  </head>
  <body>
  	<table cellspacing="0" cellpadding="0" border="0" width="100%" class="tableList">
      <% @user_ebooks.each do |ebook| %>
  		<tr>
  			<td width="5%" valign="top">Picture</td>
  			<td width="100%" valign="top">
          <a><div class= "bookTitle"><%=Ebook.where(:id => ebook.ebook_id).first.title %>
            <br>
            <%= link_to 'Remove from shelf', "/users/#{current_user.id}/user_ebooks/#{ebook.id}", controller: "user_ebooks", action: "destroy", method: :delete %>
  			</td>
  		</tr>
    <% end %>
  </body>
</html>

